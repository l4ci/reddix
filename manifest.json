{
  // Required
  "manifest_version": 2,
  "name": "Reddix",
  "version": "0.1",
  "description": "Clean and simple reddit chrome extension",

  "author": "Volker Otto",
  "content_scripts": [
    {
      "matches": ["*://www.reddit.com/*"],
      "css": ["main.css"],
      "js": ["main.js"],
      "all_frames": true ,
      "run_at" : "document_end"
    }
  ],
  "web_accessible_resources": ["main.css","sprite-reddit.png"]
}